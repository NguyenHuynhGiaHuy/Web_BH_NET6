@model SanPhamModel

<h4>Thêm sản phẩm</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Ten</label>
            <input asp-for="Ten" class="form-control" />
                <span asp-validation-for="Ten" class="text-danger"/>
            </div>

            <div class="form-group">
                <label>Gia</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger" />
            </div>

            <div class="form-group">
                <label>MoTa</label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger" />
            </div>

        <div class="form-group">
            <label>DanhMuc</label>
            <select asp-for="DanhMucId" class="form-control" asp-items="ViewBag.DanhMucs">
                <option>Chọn sản phẩm</option>
            </select>
            <span asp-validation-for="DanhMucId" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Brand</label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option>Chọn thương hiệu</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Hinh</label>
            <input asp-for="TaiHinh" class="form-control-file" />
            <span asp-validation-for="TaiHinh" class="text-danger" />
            <img id="~/imagesreview/" class="pt-2"/>
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Create</button>
        </div>
    </form>
    <a asp-action="Index">Quay ve trang danh sach san pham</a>

</div>
