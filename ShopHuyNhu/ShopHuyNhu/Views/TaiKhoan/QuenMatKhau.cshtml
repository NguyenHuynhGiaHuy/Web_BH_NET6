<!-- Form nhập email -->
<form asp-action="GuiEmailKhaoPhuc" method="post">
    <div class="form-group">
        <label for="inputEmail">Nhập email:</label>
        <input type="email" class="form-control" id="inputEmail" name="email" required>
    </div>
    <button type="submit" class="btn btn-primary">Gửi yêu cầu khôi phục mật khẩu</button>
</form>

