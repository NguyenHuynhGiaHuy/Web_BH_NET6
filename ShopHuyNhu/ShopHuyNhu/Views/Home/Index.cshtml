@model IEnumerable<SanPhamModel>

<div class="col-sm-3">
    @Html.Partial("_SidebarPartal") <!-- gọi lại slide bar-->
</div>

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <a class="btn btn-default add-to-cart" asp-action="LocSanPhamThapNhat" asp-controller="SanPham">Giá tăng dần</a>
        <a class="btn btn-default add-to-cart" asp-action="LocSanPhamCaoNhat" asp-controller="SanPham">Giá giảm dần</a>
        <form asp-action="TimKiem" asp-controller="Home" method="get">
            <div class="search_box pull-right">
                <input type="text" placeholder="Tìm kiếm" name="keyword" />
                <button type="submit">Tìm kiếm</button>
            </div>
        </form>
        <h2 class="title text-center">Sản phẩm</h2>
       
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <a asp-action="ChiTietSanPham" asp-controller="SanPham" asp-route-Id="@item.Id">
                                <img src="~/media/sanphams/@item.Hinh" alt="@item.Ten" width="200px" height="150px" />

                                <h2>@item.Gia.ToString("#,##0đ")</h2>
                                <p>@item.Ten</p>
                                <p>Danh mục: @item.DanhMuc.Ten</p>
                                <p>Thương hiệu: @item.Brand.Ten</p>
                            </a>
                            <a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="GioHang" asp-route-id="@item.Id">
                                <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                            </a>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            @*<li><a href="#"><i class="fa fa-plus-square"></i>Thêm vào yêu thích</a></li>*@
                            <!--  <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li> -->
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div><!--features_items-->
</div>
